# Korea Investment Securities (KIS) API Credentials
# Get these from https://apiportal.koreainvestment.com/
KIS_APP_KEY="your_app_key_here"
KIS_APP_SECRET="your_app_secret_here"
KIS_CANO="your_account_number_prefix_8digits" # e.g. 12345678
KIS_ACNT_PRDT_CD="01" # Account product code (usually 01)
KIS_URL_BASE="https://openapi.koreainvestment.com:9443" # Simulation: https://openapivts.koreainvestment.com:29443

# Slack Notifier
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."
# Or use Bot Token if preferred, but Webhook is simpler for just sending messages
SLACK_BOT_TOKEN="xoxb-your-token"
SLACK_CHANNEL="#general"

# Strategy Settings (Optional overrides)
RSI_WINDOW=3
SMA_WINDOW=100
MAX_POSITIONS=5
RSI_BUY_THRESHOLD=35
RSI_SELL_THRESHOLD=70
ALLOCATION_PCT=0.20 # (Deprecated)
BUY_AMOUNT_KRW=1000000 # Buy 1 Million KRW per stock
MAX_HOLDING_DAYS=38
LOSS_COOLDOWN_DAYS=90


# Scheduler Settings (HH:MM)
TIME_MORNING_ANALYSIS="08:30"
TIME_PRE_ORDER="08:57"
TIME_ORDER_CHECK="09:05"
TIME_SELL_CHECK="15:20"
TIME_SELL_EXEC="15:26"

# Split Buy Order Configuration
FIRST_ORDER_RATIO=0.5           # 1차 주문 비율 (0.5 = 50%)
SECOND_ORDER_TIME="09:30"       # 2차 주문 시간 (HH:MM)

# Price Strategy Settings (낮은 가격 매수 전략)
FIRST_ORDER_PREMIUM=0.003       # 1차 주문 프리미엄 (0.003 = +0.3%)
SECOND_ORDER_DISCOUNT=0.005     # 2차 주문 할인 (0.005 = -0.5%)

# Gradual Price Increase Settings (점진적 가격 상향)
PRICE_INCREMENT_STEP=0.002      # 상향 단계 (0.002 = +0.2%)
PRICE_INCREMENT_INTERVAL=300    # 상향 주기 (초, 300 = 5분)
MAX_PRICE_INCREASE=0.02         # 최대 상향폭 (0.02 = +2%)


